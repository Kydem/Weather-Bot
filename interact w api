DISCORD_TOKEN={OTQwNDE0NjY3NDgwNzg5MDU0.YgHDaA.L0ASSkoeYvTf1LWccENB6hmZN54}
DISCORD_GUILD={Programming}

# bot.py
import os

import discord
from dotenv import load_dotenv


load_dotenv()
TOKEN = os.getenv('OTQwNDE0NjY3NDgwNzg5MDU0.YgHDaA.L0ASSkoeYvTf1LWccENB6hmZN54')
GUILD = os.getenv('Programming')

client = discord.Client()

@client.event
async def on_ready()
    for guild in client.guilds:
        if guild.name == GUILD:
            break


    print(
        f'{client.user} is connected to the following guild:\n'
        f'{guild.name}(id: {guild.id})'        
    )
    client.run(TOKEN)